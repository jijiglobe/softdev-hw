var c = document.getElementById("ftb2maga");
var ctx = c.getContext("2d");
ctx.fillStyle = "#FF0000";
ctx.fillRect(0,0,538,538);
var x = 0;
ctx.strokeStyle="#FFFF00";
ctx.strokeRect(0,0,250,250);
ctx.beginPath();
ctx.moveTo(10,10);
ctx.lineTo(500,500);
ctx.lineTo(400,500);
ctx.stroke();
ctx.strokeStyle="#F0F0F0";
ctx.fillStyle="#000000";
ctx.beginPath();
ctx.moveTo(400,500);
ctx.lineTo(10,10);
ctx.stroke();
ctx.beginPath();
ctx.moveTo(20,300);
ctx.lineTo(70,300);
ctx.lineTo(70,350);
ctx.lineTo(20,350);
ctx.lineTo(20,300);
ctx.fill();
//fills in an arc
//arc(centerx, centery, radius, 
ctx.arc(20,300,50,3.14/6,-3.14/6);
ctx.stroke();
ctx.closepath();